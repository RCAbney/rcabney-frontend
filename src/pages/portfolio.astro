---
import { getPortfolioItems } from "../client/api";
import Layout from "../layouts/Layout.astro";
const portfolioItems = await getPortfolioItems();
import PortfolioList from "../components/PortfolioList.astro";
---

<Layout>
    <div class="max-w-7xl mx-auto p-4">
        <h1 class="mb-0 text-3xl font-serif font-bold">
            Portfolio
        </h1>
    </div>
    <PortfolioList portfolioItems={portfolioItems} />
</Layout>
